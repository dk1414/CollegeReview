<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="container">
    <h1>All Colleges</h1>

    <% for (let college of colleges){%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <%if(college.images.length) {%>
                <img class="img-fluid" alt="" src="<%=college.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://www.generationsforpeace.org/wp-content/uploads/2018/03/empty.jpg">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= college.title %> </h5>

                    <p class="card-text"><%= college.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= college.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/colleges/<%=college._id%>">View <%=college.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const colleges = { features: <%- JSON.stringify(colleges) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>